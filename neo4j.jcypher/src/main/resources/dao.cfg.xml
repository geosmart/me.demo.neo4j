<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd">
	<description>embeded neo4j config</description>

	<context:annotation-config /> 
	<!-- dynamic switch remote and emberd to test -->
	<!-- remote -->
	<bean id="neo4jConfig" class="demo.neo4j.jcypher.config.Neo4jConfig"
		init-method="initDbAccess">
		<property name="dbType" value="REMOTE"></property>
	</bean>
	<!-- emberded -->
	<!-- <bean id="neo4jConfig" class="demo.neo4j.jcypher.config.Neo4jConfig" 
		init-method="initDbAccess"> -->
	<!-- <property name="dbType" value="EMBEDDED"></property> -->
	<!-- <property name="dbPath" value="F://Dev//neo4j//data//graph.db"></property> -->
	<!-- </bean> -->

	<bean id="userConfig" class="demo.neo4j.jcypher.config.Neo4jConfig"
		parent="neo4jConfig">
		<property name="dbName" value="UserDB"></property>
	</bean>
	<bean id="populationConfig" class="demo.neo4j.jcypher.config.Neo4jConfig"
		parent="neo4jConfig">
		<property name="dbName" value="PopulationDB"></property>
	</bean>

	<bean id="userDao" class="demo.neo4j.jcypher.dao.impl.UserDaoImpl">
		<property name="neo4jConfig" ref="userConfig"></property>
	</bean>
	<bean id="populationDao" class="demo.neo4j.jcypher.dao.impl.PopulationDaoImpl">
		<property name="neo4jConfig" ref="populationConfig"></property>
	</bean>
</beans>
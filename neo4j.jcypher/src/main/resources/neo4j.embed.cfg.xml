<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd">
	<description>embeded neo4j config</description>
	
	<context:annotation-config />
	
	<bean id="neo4jConfig" class="demo.neo4j.jcypher.config.Neo4jConfig" init-method="initEmbedDB">
		<property name="dbName" value="UserDB"></property>
		<property name="dbPath" value="//bin//db"></property>
	</bean>
	
	<bean id="userDao" class="demo.neo4j.jcypher.dao.impl.UserDaoImpl"  >
		<property name="neo4jConfig" ref="neo4jConfig"></property> 
	</bean>
</beans>